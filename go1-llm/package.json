{
  "name": "multi-timer-app",
  "version": "1.0.0",
  "description": "A robust TypeScript multi-timer application with type-safe state management",
  "type": "module",
  "main": "electron/main.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "vite",
    "dev:electron": "concurrently \"yarn dev\" \"wait-on http://localhost:5173 && electron electron/main.js\"",
    "build:react": "vite build",
    "build:electron": "yarn build:react && electron-builder",
    "build:electron-dev": "yarn build:react && electron-builder --dir",
    "start": "electron electron/main.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "typescript",
    "timer",
    "state-management",
    "events",
    "architecture"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^8.45.0",
    "typescript": "^5.2.0",
    "vite": "^4.4.0",
    "vitest": "^0.34.0",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.multitimer.app",
    "productName": "Multi-Timer",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "dist-react/**/*",
      "dist/**/*",
      "!src/**/*",
      "!app/**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
